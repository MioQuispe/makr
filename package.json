{
  "name": "makr",
  "version": "1.0.0",
  "description": "Fast HTML5 Entity-System game engine",
  "author": "Florent Cailhol <florent.cailhol@gmail.com>",
  "license": "MIT",
  "repository": "makrjs/makr.git",
  "keywords": [
    "speedr",
    "game",
    "ecs",
    "entity",
    "component"
  ],
  "main": "lib/index.js",
  "files": [
    "dist/makr.js",
    "dist/makr.min.js",
    "lib"
  ],
  "devDependencies": {
    "browserify": "^8.1.3",
    "bundle-collapser": "^1.1.1",
    "express": "^4.11.2",
    "mocha": "^2.1.0",
    "should": "^4.6.5",
    "uglify-js": "^2.4.16"
  },
  "scripts": {
    "test": "mocha",
    "start": "node examples/server.js",
    "build": "npm run bundle && npm run minify",
    "bundle": "browserify lib/index.js -s makr > dist/makr.js",
    "minify": "bundle-collapser dist/makr.js | uglifyjs -mc > dist/makr.min.js",
    "prepublish": "npm run build"
  }
}
